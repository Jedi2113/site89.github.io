rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Characters collection - allow anyone to read (for personnel files page)
    match /characters/{characterId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.linkedUID == request.auth.uid;
      allow update, delete: if request.auth != null && (request.auth.uid == resource.data.linkedUID || request.auth.token.email == 'jedi21132@gmail.com');
    }

    // Users collection - allow reads for authenticated users
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Personnel collection - allow authenticated users to read PIDs for character creation
    match /personnel/{personnelId} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins can write, handled server-side
    }

    // Emails collection
    match /emails/{emailId} {
      // Allow reads only for authenticated users who are involved in the email
      // Check if their auth email matches the sender's auth email OR they are in the recipients list
      allow read: if request.auth != null && (
        resource.data.senderEmail == request.auth.token.email ||
        request.auth.token.email in resource.data.recipients
      );

      // Allow create for authenticated users sending from their character or auth email
      allow create: if request.auth != null
        && request.resource.data.senderEmail == request.auth.token.email
        && (request.resource.data.sender == request.auth.token.email || request.resource.data.sender.matches('.*@site89\\.org$'))
        && request.resource.data.recipients is list
        && request.resource.data.subject is string
        && request.resource.data.body is string;

      // Allow updates if user is involved (sender or recipient). Limit updatable keys to a safe set.
      allow update: if request.auth != null && (
        resource.data.senderEmail == request.auth.token.email || request.auth.token.email in resource.data.recipients
      ) && (request.resource.data.keys().hasOnly(['sender','senderEmail','recipients','subject','body','status','folder','ts','read']) );

      // Allow delete only by the sender
      allow delete: if request.auth != null && resource.data.senderEmail == request.auth.token.email;
    }

    // Gallery collection
    match /gallery/{galleryId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
        && request.resource.data.uploaderId == request.auth.uid
        && request.resource.data.imageUrl is string
        && request.resource.data.caption is string;
      allow delete: if request.auth != null && resource.data.uploaderId == request.auth.uid;
    }
  }
}