rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user has IA/RAISA permissions
    function isIARAISAPersonnel() {
      // Add emails of IA/RAISA department personnel here
      // For now, only admin has this permission - you can add more emails
      let iaraisaEmails = [
        'jedi21132@gmail.com',
        'mason@millerzoo.com',
        'usxafiy@gmail.com',
        'redbridge7242@gmail.com',
        'o5councilfoundation@gmail.com'
        // Add more IA/RAISA personnel emails like:
        // 'someuser@example.com',
        // 'anotherperson@example.com'
      ];
      return request.auth != null && request.auth.token.email in iaraisaEmails;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // ===== ANALYTICS =====
    // Public read, admin-only write
    match /settings/analytics {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Characters collection - allow anyone to read (for personnel files page)
    match /characters/{characterId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.linkedUID == request.auth.uid;
      // Character owner, IA/RAISA personnel, or admin can edit/delete
      allow update, delete: if request.auth != null && (
        request.auth.uid == resource.data.linkedUID || 
        isIARAISAPersonnel()
      );
    }

    // Users collection - allow reads for authenticated users
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Personnel collection - allow authenticated users to read PIDs for character creation
    match /personnel/{personnelId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null;
    }

    // Emails collection - character-based email system with director support
    match /emails/{emailId} {
      // Allow any authenticated user to read emails (frontend filters by character and mailing lists)
      allow read: if request.auth != null;

      // Allow create: user sends from their auth email, sender can be character/personal email or division address
      // Division-specific addresses (bod@, io@, sd@, scd@, deo@, mtf@, ia@site89.org):
      // - Frontend validates director permissions via character.directorOf array before sending
      // - Mailing lists (e.g., SD@site89.org) are expanded on frontend to individual character emails
      // - Backend trusts frontend validation since user auth ties to email
      allow create: if request.auth != null
        && request.resource.data.senderEmail == request.auth.token.email
        && (request.resource.data.sender.matches('.*@site89\\.org$') || request.resource.data.sender == request.auth.token.email)
        && request.resource.data.recipients is list
        && request.resource.data.recipients.size() > 0
        && request.resource.data.subject is string
        && request.resource.data.body is string;

      // Allow update if:
      // - User is the sender (can update folder, status, etc.)
      // - OR user is updating ONLY the 'read' field (recipients marking as read)
      allow update: if request.auth != null && (
        resource.data.senderEmail == request.auth.token.email ||
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read']))
      );

      // Allow delete if user is the sender
      allow delete: if request.auth != null && resource.data.senderEmail == request.auth.token.email;
    }

    // Gallery collection
    match /gallery/{galleryId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
        && request.resource.data.uploaderId == request.auth.uid
        && request.resource.data.imageUrl is string
        && request.resource.data.caption is string;
      allow delete: if request.auth != null && (
        resource.data.uploaderId == request.auth.uid ||
        request.auth.token.email == 'jedi21132@gmail.com'
      );
    }

    // Research Logs collection
    match /researchLogs/{logId} {
      // Public read (frontend filters by clearance)
      allow read: if true;
      
      // Allow authenticated users to create
      // Frontend enforces ScD/R&D or Level 5+ permission checks
      allow create: if request.auth != null
        && request.resource.data.createdByUid == request.auth.uid
        && request.resource.data.title is string;
      
      // Allow authenticated users to update (frontend enforces permissions)
      allow update: if request.auth != null;
      
      // Only IA/RAISA personnel can delete
      allow delete: if request.auth != null && isIARAISAPersonnel();
    }

    // Incident Reports collection (for SD portal)
    match /incidentReports/{reportId} {
      // Allow authenticated users to read
      allow read: if request.auth != null;
      
      // Allow create for authenticated users
      allow create: if request.auth != null
        && request.resource.data.createdByUid == request.auth.uid
        && request.resource.data.reportId is string
        && request.resource.data.content is string;
      
      // Allow update/delete by creator or admin
      allow update, delete: if request.auth != null && (
        resource.data.createdByUid == request.auth.uid ||
        request.auth.token.email == 'jedi21132@gmail.com'
      );
    }

    // Newsletter articles - IO personnel (Level 4+) and Directors can write
    match /newsletter-articles/{articleId} {
      allow read: if true; // Everyone can read
      allow create: if request.auth != null
        && request.resource.data.authorId == request.auth.uid
        && request.resource.data.title is string
        && request.resource.data.content is string;
      allow update, delete: if request.auth != null && (
        resource.data.authorId == request.auth.uid ||
        request.auth.token.email == 'jedi21132@gmail.com'
      );
    }

    // Groups of Interest - RAISA personnel (L2+) and Directors can write
    match /groups-of-interest/{goiId} {
      allow read: if true; // Everyone can read
      allow create: if request.auth != null
        && request.resource.data.lastUpdatedById == request.auth.uid
        && request.resource.data.name is string
        && request.resource.data.description is string;
      allow update, delete: if request.auth != null && (
        resource.data.lastUpdatedById == request.auth.uid ||
        request.auth.token.email == 'jedi21132@gmail.com'
      );
    }

    // Persons of Interest - RAISA personnel (L2+) and Directors can write
    match /persons-of-interest/{poiId} {
      allow read: if true; // Everyone can read
      allow create: if request.auth != null
        && request.resource.data.lastUpdatedById == request.auth.uid
        && request.resource.data.name is string
        && request.resource.data.description is string;
      allow update, delete: if request.auth != null && (
        resource.data.lastUpdatedById == request.auth.uid ||
        request.auth.token.email == 'jedi21132@gmail.com'
      );
    }

    // Forum Threads - Reddit-style discussion board
    match /forum-threads/{threadId} {
      // Anyone can read threads
      allow read: if true;
      
      // Authenticated users can create threads
      allow create: if request.auth != null
        && request.resource.data.authorUid == request.auth.uid;
      
      // Author can edit their own thread, admins can moderate
      allow update: if request.auth != null && (
        resource.data.authorUid == request.auth.uid ||
        request.auth.token.email == 'jedi21132@gmail.com'
      );
      
      // Author or admins can delete
      allow delete: if request.auth != null && (
        resource.data.authorUid == request.auth.uid ||
        request.auth.token.email == 'jedi21132@gmail.com'
      );
      
      // Replies subcollection
      match /replies/{replyId} {
        allow read: if true;
        
        allow create: if request.auth != null
          && request.resource.data.authorUid == request.auth.uid;
        
        // Author can edit, admins can moderate
        allow update: if request.auth != null && (
          resource.data.authorUid == request.auth.uid ||
          request.auth.token.email == 'jedi21132@gmail.com'
        );
        
        // Author or admins can delete
        allow delete: if request.auth != null && (
          resource.data.authorUid == request.auth.uid ||
          request.auth.token.email == 'jedi21132@gmail.com'
        );
      }
    }

    // Helper function to check if user has Level 5+ clearance
    function isLevel5Plus() {
      // This is checked via character data by the frontend
      // The frontend only allows Level 5+ users to submit
      return request.auth != null;
    }

    // Site Feedback - Anyone can create, only admin can read/manage
    match /site-feedback/{feedbackId} {
      allow read: if request.auth != null && request.auth.token.email == 'jedi21132@gmail.com';
      allow create: if true; // Anyone can submit feedback
      allow update, delete: if request.auth != null && request.auth.token.email == 'jedi21132@gmail.com';
    }

    // Employee of the Month - Public read, Level 5+ can create
    match /eotm/{eotmId} {
      allow read: if true; // Anyone can view
      allow create: if request.auth != null && isLevel5Plus();
      allow update, delete: if request.auth != null && (
        isLevel5Plus() || 
        isADIOPersonnel()
      );
    }

    // Anomaly entries - public read, authenticated create/update
    // Frontend enforces ScD/R&D or Level 5+ permission checks
    match /anomalies/{anomalyId} {
      allow read: if true;

      allow create: if request.auth != null
        && request.resource.data.createdByUid == request.auth.uid
        && request.resource.data.itemNumber is string;

      allow update: if request.auth != null;

      allow delete: if request.auth != null && isIARAISAPersonnel();
    }

    // Case Files collection - IA/RAISA cases
    match /caseFiles/{caseId} {
      // Public read (frontend filters by clearance)
      allow read: if true;
      
      // Allow authenticated users to create
      // Frontend enforces IA/RAISA or Level 5+ permission checks
      allow create: if request.auth != null
        && request.resource.data.caseId is string
        && request.resource.data.subject is string
        && request.resource.data.versions is list;
      
      // Allow authenticated users to update (frontend enforces permissions)
      allow update: if request.auth != null;
      
      // Only AD/IO personnel can delete
      allow delete: if request.auth != null && isADIOPersonnel();
    }
  }
}