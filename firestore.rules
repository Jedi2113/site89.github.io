rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Characters collection - allow anyone to read (for personnel files page)
    match /characters/{characterId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.linkedUID == request.auth.uid;
      allow update, delete: if request.auth != null && (request.auth.uid == resource.data.linkedUID || request.auth.token.email == 'jedi21132@gmail.com');
    }

    // Users collection - allow reads for authenticated users
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Personnel collection - allow authenticated users to read PIDs for character creation
    match /personnel/{personnelId} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins can write, handled server-side
    }

    // Emails collection - character-based email system
    match /emails/{emailId} {
      // Allow any authenticated user to read emails (frontend filters by character)
      allow read: if request.auth != null;

      // Allow create: user sends from their auth email, sender can be character or auth email
      allow create: if request.auth != null
        && request.resource.data.senderEmail == request.auth.token.email
        && (request.resource.data.sender.matches('.*@site89\\.org$') || request.resource.data.sender == request.auth.token.email)
        && request.resource.data.recipients is list
        && request.resource.data.subject is string
        && request.resource.data.body is string;

      // Allow update if user is the sender
      allow update: if request.auth != null && resource.data.senderEmail == request.auth.token.email;

      // Allow delete if user is the sender
      allow delete: if request.auth != null && resource.data.senderEmail == request.auth.token.email;
    }

    // Gallery collection
    match /gallery/{galleryId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
        && request.resource.data.uploaderId == request.auth.uid
        && request.resource.data.imageUrl is string
        && request.resource.data.caption is string;
      allow delete: if request.auth != null && resource.data.uploaderId == request.auth.uid;
    }
  }
}